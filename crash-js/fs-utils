function
  _fs_module_get() {
  let
    _fs;
  if ( typeof window === 'undefined' &&
       ( typeof global !== 'undefined' && global.global === global ) &&
       typeof __webpack_require__ !== 'function' ) {
    _fs =
      require(
        "fs");
  }
  else {
    _fs =
      require("happy-opfs");
  }
  return _fs;
}

function
  _path_module_get() {
  let
    _path;
  if ( typeof window === 'undefined' &&
       ( typeof global !== 'undefined' && global.global === global ) &&
       typeof __webpack_require__ !== 'function' ) {
    _path =
      require("path");
  }
  else {
    _path =
      require("@std/path");
  }
  return _path;
}

function
  _split_opfs() {
  console.log(
    "hello");
}

function
  _split_module_get() {
  let
    _split;
  if ( typeof window === 'undefined' &&
       ( typeof global !== 'undefined' && global.global === global ) &&
       typeof __webpack_require__ !== 'function' ) {
    _split =
      require(
        "split-file");
  }
  else {
    _split =
      _split_opfs;
  }
  return _split;
}

const
  _fs =
    _fs_module_get();
const
  _json_parse =
    JSON.parse;
const
  _json_display =
    JSON.stringify;
const
  _path_module =
    _path_module_get();
_path_module_basename =
  _path_module.basename;
_path_module_dirname =
  _path_module.dirname;
_path_module_join =
  _path_module.join;
_path_module_parse =
  _path_module.parse;
const
  _split_module =
    _split_module_get();

function
  _basename(
    _file_path) {
  let
    _dir;
  _dir =
    _path_module_basename(
      _file_path);
  return _dir;
}

function
  _dirname(
    _file_path) {
  let
    _dir;
  _dir =
    _path_module_dirname(
      _file_path);
  return _dir;
}

function
  _ext_rm(
    _path) {
  let
    _dir,
    _name,
    _paths;
  _dir =
    _path_module_parse(
      _path).dir;
  _name =
    _path_module_parse(
      _path).name;
  _paths = [
    _dir,
    _name];
  return _path_join(
    _paths); 
}

function
  _file_exists(
    _path) {
  let
    _exists,
    _return;
  _return =
    false;
  _exists =
    _fs.existsSync(
      _path);
  if (_exists) {
    _return =
      true;
  }
  return _return;
}

function
  _file_read(
    _path) {
  let
    _read_opts,
    _return;
  _read_opts =
   {"encoding":
      "utf8",
    "flag":
      'r'};
  _return =
    _fs.readFileSync(
      _path,
      _read_opts);
  return _return;
}

function
  _file_write(
    _path,
    _content) {
  _fs.writeFileSync(
    _path,
    _content);
}

function
  _fs_worker_new(
    _url) {
  let
    _worker;
  if ( typeof _url === 'undefined' ) {
    _url =
      "fs-worker.js";
  }
  _worker =
    new Worker(
      _url);
  return _worker;
}

async function
  _fs_worker_start(
    _worker_path,
    _buffer_length,
    _op_timeout) {
  let
    _agent,
    _agent_connect,
    _connect_opts,
    _worker;
  if ( typeof _worker_path === 'undefined' ) {
    _worker_path =
      "fs-worker.js";
  }
  if ( typeof _buffer_length !== 'Number' ) {
    // SharedArrayBuffer size between
    // main thread and worker
    _buffer_length =
      10 * 1024 * 1024;
  }
  if ( typeof _buffer_length !== 'Number' ) {
    // SharedArrayBuffer size between
    // main thread and worker
    _op_timeout =
      10 * 1024 * 1024;
  }
  _agent_connect =
    _fs.connectSyncAgent;
  _worker =
    _fs_worker_new(
      _worker_path);
  _connect_opts = {
    worker:
      _worker,
    bufferLength:
      _buffer_length,
    opTimeout:
      _op_timeout
  }
  _agent =
    _agent_connect(
      _connect_opts);
  return _agent;
}

function
  _json_read(
    _json_path) {
  let
    _json_str,
    _json;
  _json_str =
    _file_read(
      _json_path);
  _json =
    _json_parse(
      _json_str);
  return _json;
}

function
  _path_join(
    _paths) {
  let
    _path;
  _path =
    _path_module_join.apply(
      null,
      _paths);
  return _path;
}

function
  _split(
    _in,
    _parts,
    _out) {
  console.log(
    _split_module);
}

module.exports = {
  _basename:
    _basename,
  _dirname:
    _dirname,
  _ext_rm:
    _ext_rm,
  _file_exists:
    _file_exists,
  _file_read:
    _file_read,
  _file_write:
    _file_write,
  _fs_worker_new:
    _fs_worker_new,
  _fs_worker_start:
    _fs_worker_start,
  _ls:
    _fs.readDirSync,
  _mkdir:
    _fs.mkdirSync,
  _path_join:
    _path_join,
  _json_display:
    _json_display,
  _json_read:
    _json_read
};
